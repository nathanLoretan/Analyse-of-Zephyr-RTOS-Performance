# https://www.zephyrproject.org/doc/reference/kconfig/index.html

# To Save power consumption-----------------------------
CONFIG_CONSOLE=y
CONFIG_SERIAL=y

# DEBUG-------------------------------------------
CONFIG_SYS_LOG=y
# CONFIG_SYS_LOG_SPI_LEVEL=4

CONFIG_DEBUG_INFO=y
CONFIG_EXCEPTION_DEBUG=n
CONFIG_BLUETOOTH_DEBUG=y
CONFIG_BLUETOOTH_DEBUG_LOG=y
CONFIG_BLUETOOTH_DEBUG_CONN=n
CONFIG_BLUETOOTH_DEBUG_HCI_CORE=n
CONFIG_BLUETOOTH_DEBUG_GATT=n
CONFIG_BLUETOOTH_DEBUG_ATT=n
CONFIG_BLUETOOTH_CONTROLLER_DEBUG_PINS=n
CONFIG_BLUETOOTH_CONTROLLER_PROFILE_ISR=y

# GENERAL CONFIGURATION-------------------------------------------
CONFIG_PRINTK=y
CONFIG_STDOUT_CONSOLE=y
CONFIG_HEAP_MEM_POOL_SIZE=4096

# SPI CONFIGURATION-------------------------------------------
CONFIG_SPI=y
CONFIG_SPI_NRF5=y
CONFIG_SPIM_NRF52=y
CONFIG_SPI_LEGACY_API=y

# nRF5 SPI drivers.
# Enable support for nRF5 MCU series SPI drivers. Peripherals with the same instance id can not be used
# together, e.g., SPIM0 and I2C_0 (TWIM0) and SPIS0. You may need to disable I2C_0 or I2C_1.

CONFIG_SPI_1=y
CONFIG_SPI_1_IRQ_PRI=0
CONFIG_SPIM1_NRF52=y
CONFIG_SPIM1_NRF52_GPIO_PORT=1
CONFIG_SPIM1_NRF52_GPIO_SCK_PIN=15
CONFIG_SPIM1_NRF52_GPIO_MISO_PIN=14
CONFIG_SPIM1_NRF52_GPIO_MOSI_PIN=13
CONFIG_SPIM1_NRF52_GPIO_SS_PIN_0=12
CONFIG_SPIM1_NRF52_ORC=0xFF

CONFIG_SPI_2=y
CONFIG_SPI_2_IRQ_PRI=0
CONFIG_SPIM2_NRF52=y
CONFIG_SPIM2_NRF52_GPIO_PORT=1
CONFIG_SPIM2_NRF52_GPIO_SCK_PIN=6
CONFIG_SPIM2_NRF52_GPIO_MISO_PIN=5
CONFIG_SPIM2_NRF52_GPIO_MOSI_PIN=4
CONFIG_SPIM2_NRF52_GPIO_SS_PIN_0=3
CONFIG_SPIM2_NRF52_ORC=0xFF

# I2C CONFIGURATION-------------------------------------------
CONFIG_I2C=y
CONFIG_I2C_NRF5=y

CONFIG_I2C_0=y
CONFIG_I2C_0_IRQ_PRI=0
CONFIG_I2C_0_NAME="I2C_0"
CONFIG_I2C_NRF5_GPIO_PORT=0
CONFIG_I2C_NRF5_GPIO_SCA_PIN=4
CONFIG_I2C_NRF5_GPIO_SCL_PIN=3

# GPIO CONFIGURATION------------------------------------------
CONFIG_GPIO=y
CONFIG_GPIO_NRF5=y
CONFIG_GPIO_NRF5_P0=y
CONFIG_GPIO_NRF5_P1=y
CONFIG_GPIO_NRF5_PORT_P0_PRI=0
CONFIG_GPIO_NRF5_PORT_P1_PRI=0

# BLUETOOTH CONFIGURATION------------------------------------------
CONFIG_BLUETOOTH=y
CONFIG_BLUETOOTH_CONTROLLER=y
CONFIG_BLUETOOTH_HCI=y
CONFIG_BLUETOOTH_SMP=n
CONFIG_BLUETOOTH_SIGNING=n
CONFIG_BLUETOOTH_PERIPHERAL=y
CONFIG_BLUETOOTH_ATT_PREPARE_COUNT=100
CONFIG_BLUETOOTH_PRIVACY=n
CONFIG_BLUETOOTH_DEVICE_NAME="ExtBoard"
CONFIG_BLUETOOTH_DEVICE_APPEARANCE=833

# Set the MTU
CONFIG_BLUETOOTH_GATT_CLIENT=y
CONFIG_BLUETOOTH_HCI_ACL_FLOW_CONTROL=y
# 23-1300
CONFIG_BLUETOOTH_L2CAP_RX_MTU=23
# 23 - 2000
CONFIG_BLUETOOTH_L2CAP_TX_MTU=23

# Number of ATT PDUs that can be at a single moment queued for
# transmission. If the application tries to send more than this
# amount the calls will block until an existing queued PDU gets
# sent.  --------------------------
# 1 - CONFIG_BLUETOOTH_L2CAP_TX_BUF_COUNT
CONFIG_BLUETOOTH_ATT_TX_MAX=230

# Maximum number of pending TX buffers that have not yet been
# acknowledged by the controller
# 1 - 128
CONFIG_BLUETOOTH_CONN_TX_MAX=128

# Number of buffers available for outgoing L2CAP packets.
# 2 - 255
CONFIG_BLUETOOTH_L2CAP_TX_BUF_COUNT=230
#  When it is full, the notification or indication is blocked

# Set the number of Tx PDUs to be queued for transmission in the
# controller. In a 7.5ms connection interval and 2M PHY, maximum 19
# packets can be enqueued, with 18 packets with L2CAP payload size of 1
# byte can be acknowledged.
# 1 - 19
CONFIG_BLUETOOTH_CONTROLLER_TX_BUFFERS=19
#  Depend of CONFIG_BLUETOOTH_CONN_TX_MAX

# Size of the Tx buffers and the value returned in HCI LE Read Buffer
# Size command response. If this size if greater than effective PDU size
# then controller will perform fragmentation before transmitting on the
# the packet on air.
# 27-16384
CONFIG_BLUETOOTH_CONTROLLER_TX_BUFFER_SIZE=27
# packet must be smaller

# Set the maximum data length of PDU supported in the Controller.
# 27 - 251
CONFIG_BLUETOOTH_CONTROLLER_DATA_LENGTH_MAX=27
